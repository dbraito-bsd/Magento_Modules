<?xml version="1.0"?>
<config>
    <sections>
        <filogram translate="label" module="filogram">
            <class>separator-top</class>
            <label>Filofax Instagram</label>
            <tab>filolocale</tab>
            <frontend_type>text</frontend_type>
            <sort_order>7000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<general translate="label">
                    <label>Instagram Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable/Disable</label>
                            <comment>Enable Filofax Instagram Widget</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <access_token translate="label">
                            <label>Instagram Access Token</label>
                            <comment>(This is token returned from Instagram App)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </access_token>
                        <user_id>
                            <label>Instagram User ID</label>
                            <comment>(This is user id from Instagram App)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </user_id>
                        <username>
                            <label>Instagram User Name</label>
                            <comment>(This is user Name of Instagram Account)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </username>
                        <cache_lifetime>
                            <label>Cache Lifetime</label>
                            <comment>86400 by default</comment>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cache_lifetime>
                    </fields>
                </general>
            </groups>
        </filogram>
    </sections>
</config>
