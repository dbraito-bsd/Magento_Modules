<?xml version="1.0"?>

<config>
    <sections>
        <filoaffiliate translate="label" module="filoaffiliate">
            <label>Affiliate Program</label>
            <tab>filolocale</tab>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label">
                    <label>Affiliate Program Options</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable>
                        <currency>
					        <label>Default Currency</label>
					        <frontend_type>text</frontend_type>
					        <sort_order>80</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>1</show_in_website>
					        <show_in_store>1</show_in_store>
					        <comment><![CDATA[Can vary depending on program but normally GBP, USD etc]]></comment>
					    </currency>
                        <event_id>
					        <label>Event/Group ID(s) or Commission Groups</label>
                            <frontend_type>text</frontend_type>
					        <sort_order>30</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>1</show_in_website>
					        <show_in_store>1</show_in_store>                    
					        <comment>
						    <![CDATA[Seperate multiple id's with a comma e.g. "1234,9876,3467". The first or only id in the list will be treated as the default.]]>
	            			</comment>
					    </event_id>
                        <tax>
					        <label>Commission Including Tax</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
					        <sort_order>40</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>1</show_in_website>
					        <show_in_store>1</show_in_store>                    
					    </tax>
                        <program_id>
					        <label>Program ID</label>
                            <frontend_type>text</frontend_type>
					        <sort_order>20</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>1</show_in_website>
					        <show_in_store>1</show_in_store>                    
					    </program_id>
                        <category>
					        <label>Category</label>
                            <frontend_type>select</frontend_type>
                            <source_model>filoaffiliate/source_awincategory</source_model>
					        <sort_order>35</sort_order>
					        <show_in_default>1</show_in_default>
					        <show_in_website>1</show_in_website>
					        <show_in_store>1</show_in_store>
					        <comment><![CDATA[As per: <a href="http://wiki.affiliatewindow.com/index.php/ShopWindow_Category_Tree" target="_new">http://wiki.affiliatewindow.com/index.php/ShopWindow_Category_Tree</a>]]></comment>
					    </category>
                    </fields>
                </general>
            </groups>
        </filoaffiliate>
    </sections>
</config>

